{% if data.disabledMessage != null %}
    <div class="disabled-message">{{ data.disabledMessage }}</div>
{% else %}
    {% if data.showWidget %}
        <div class="forms-block bible-widget-form">
            <div class="forms-block-content">
                {% if data.showReadForm %}
                    <form class="read-form" method="get" action="{{ data.bibleReaderUrl }}" data-base-url="{{ data.bibleReaderUrl }}" data-url-type="{{ data.bibleReaderUrlType }}" role="form">
                        <input type="hidden" name="action" value="bible_widget_refresh">
                        <div class="auto-refresh" data-refresh-url="/wp-admin/admin-ajax.php">
                            {{ include('bible-widget-read-form.twig') }}
                        </div>
                    </form>
                {% endif %}

                {% if data.showSearchForm %}
                    <form method="get" action="{{ data.bibleSearchUrl }}" role="form">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="search form-group">
                                    <label class="sr-only" for="widget-search-keywords">{{ strings['/biblica/templates/rtb/widget/searchLabel'] }}</label>
                                    <span class="ui-helper-hidden-accessible" aria-live="polite" role="status"></span>
                                    <input autocomplete="off" class="form-control {# autocomplete ui-autocomplete-input #}" {# data-acurl="/views/pages/readthebiblepages/autocomplete.ashx" #} name="q" id="widget-search-keywords" placeholder="{{ data.searchPlaceholder }}" type="search">
                                    <input id="widget-search-translation" name="translationid" type="hidden" value="{{ data.selectedTranslation.id }}"/>
                                    <div class="submit form-group">
                                        <button type="submit" class="btn" aria-label="Search">
                                            <svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="11" cy="11" r="6" stroke-width="2"/>
                                                <path d="M20 20L15.5 15.5" stroke-width="2" stroke-linecap="round"/>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endif %}